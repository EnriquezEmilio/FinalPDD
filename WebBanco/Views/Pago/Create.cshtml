@model WebBanco.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-1">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="monto" class="control-label"></label>
                <input asp-for="monto" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-1">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="pagado" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" /> @Html.DisplayNameFor(model => model.pagado)
                </label>
            </div>
            <div class="form-group mb-1">
                <label asp-for="metodo" class="control-label"></label>
                <input asp-for="metodo" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="metodo" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="num_usr" class="control-label"></label>
                <select asp-for="num_usr" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-items="ViewBag.num_usr"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" style="font-weight:bold; text-decoration:none; border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid blue; " />
                <a class="btn p-2" style="color:black; font-weight:bold; text-decoration:none; border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-action="Index">Volver</a>
                <span asp-validation-for="num_usr" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

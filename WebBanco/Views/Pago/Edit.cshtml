@model WebBanco.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group mb-1">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="monto" class="control-label"></label>
                <input asp-for="monto" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-1">
                <label class="form-check-label">
                    <input class="form-check-input" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-for="pagado" /> @Html.DisplayNameFor(model => model.pagado)
                </label>
            </div>
            <div class="form-group mb-1">
                <label asp-for="metodo" class="control-label"></label>
                <input asp-for="metodo" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="metodo" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="num_usr" class="control-label"></label>
                <select asp-for="num_usr" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-items="ViewBag.num_usr"></select>
                <span asp-validation-for="num_usr" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary " style=" border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <a class="btn p-1" style="color:black; font-weight:bold; text-decoration:none; border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

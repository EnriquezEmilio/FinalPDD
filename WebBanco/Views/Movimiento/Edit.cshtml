@model WebBanco.Models.Movimiento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idm" />
            <div class="form-group mb-1">
                <label asp-for="detalle" class="control-label"></label>
                <input asp-for="detalle" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="detalle" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="monto" class="control-label"></label>
                <input asp-for="monto" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="id" class="control-label"></label>
                <select asp-for="id" class="form-control" style="box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" -items="ViewBag.id"></select>
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary " style=" border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" />
                <a class="btn p-1" style="color:black; font-weight:bold; text-decoration:none; border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
